<h1>Listing include_drinks</h1>

<table>
  <tr>
    <th>Drink</th>
    <th>Order ID</th>
    <th>Quantity</th>
    <th></th>
    <th></th>
  </tr>

<% @include_drinks.each do |include_drink| %>
  <tr>
    <td><%= include_drink.drink_id %></td>
    <td><%= include_drink.order_id %></td>
    <td><%= include_drink.quantity %></td>

    <td><%= link_to 'Show', include_drink %></td>
    <td><%= link_to 'Edit', edit_include_drink_path(include_drink) %></td>
