<!DOCTYPE html>
<html>
<head>
  <title>Pp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body class='<%= controller.controller_name %>'>
	<div id="banner">
		<%= @page_title || "CMSC424 Pizza Restaurant" %>
	</div>

	<div id="columns">
		<div id="side"> 
			<div id="order">
				<% if current_user %>
				<%# if session[:user_id] %>
					<% if @order %>
						<%= render @order %>
					<% end %>
				<% end %>
			</div>

			<ul>
				<%= link_to 'Home', store_path %> <br/>
				<%= link_to 'Register', new_user_path %> <br/>
				<%= link_to 'Login', login_path %> 

			</ul> 

			<% if current_user %>
			<%# if session[:user_id] %>
				<ul>

					<li><%= link_to 'Purchases', purchases_path %></li>
					<li><%= link_to 'Pizzas', pizzas_path %></li>
					<li><%= link_to 'Users', users_path %></li>
					<li><%= link_to 'Logout', logout_path, method: :delete %></li>
					<li><%= link_to 'Edit Profile', edit_user_path(session[:user_id]) %></li>

				</ul>
				<%= button_to 'Logout', logout_path, method: :delete %>
			<% end %>
		</div>

		<div id="main"> 
			<%= yield %>
	    </div>
  	</div>
</body>
</html>
