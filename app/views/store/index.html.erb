<% if notice %>
	<p id="notice"><%= notice %></p>
<% end %>
<h1>Your Order Options </h1>

	<% if $happy_hour %>
		<h3>IT'S HAPPY HOUR - If you order 2 of the same pizza, you get one for free!</h3>
	<% end %>

	<h3><%= link_to "Click to Place Pizza Order", :controller => 'preferences', :action =>'new' %></h3>
   <% @pizzas.each do |pizza| %>
		<div class="entry">
		
		  <h3> <b>Size: </b><%= pizza.size %></h3>

		  <h3><b>Crust: </b><%= pizza.crust %></h3>



			<div class="price_line">
			  <span class="price">
			  	<b>Price: </b><%= number_to_currency(pizza.price) %>
			  </span>
			</div>
		</div>
	<% end %>


   <% @drinks.each do |drink| %>
		<div class="entry">
		
		  <h3> <b>Name: </b><%= drink.name %></h3>

		  <h3><b>Description: </b><%= drink.description %></h3>

		  
			<div class="price_line">
			  <span class="price">
			  	<b>Price: </b><%= number_to_currency(drink.price) %>
				<%= button_to 'Add to Order', include_drinks_path(drink_id: drink) %>
			  </span>
			</div>
		</div>
	<% end %>