<% if notice %>
	<p id="notice"><%= notice %></p>
<% end %>
<h1>Your Order Options </h1>


   <% @pizzas.each do |pizza| %>
		<div class="entry">
		
		  <h3> <b>Size: </b><%= pizza.size %></h3>

		  <h3><b>Crust: </b><%= pizza.crust %></h3>

		  
			<div class="price_line">
			  <span class="price">
			  	<b>Price: </b><%= number_to_currency(pizza.price) %>
				<%= button_to 'Add to Order', preferences_path(pizza_id: pizza) %>
			  </span>
			</div>
		</div>
	<% end %>


   <% @drinks.each do |drink| %>
		<div class="entry">
		
		  <h3> <b>Name: </b><%= drink.name %></h3>

		  <h3><b>Description: </b><%= drink.description %></h3>

		  
			<div class="price_line">
			  <span class="price">
			  	<b>Price: </b><%= number_to_currency(drink.price) %>
				<%= button_to 'Add to Order', preferences_path(drink_id: drink) %>
			  </span>
			</div>
		</div>
	<% end %>