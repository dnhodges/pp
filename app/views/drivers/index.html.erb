<h1>Listing drivers</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Phone</th>
    <th>Address</th>
    <th>Salary</th>
    <th>Total hours</th>
    <th>Vehicle</th>
    <th>Cost per mile</th>
    <th>Current location</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @drivers.each do |driver| %>
  <tr>
    <td><%= driver.first_name %></td>
    <td><%= driver.last_name %></td>
    <td><%= driver.phone %></td>
    <td><%= driver.address %></td>
    <td><%= driver.salary %></td>
    <td><%= driver.total_hours %></td>
    <td><%= driver.vehicle %></td>
    <td><%= driver.cost_per_mile %></td>
    <td><%= driver.current_location %></td>
    <td><%= link_to 'Show', driver %></td>
    <td><%= link_to 'Edit', edit_driver_path(driver) %></td>
    <td><%= link_to 'Destroy', driver, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

