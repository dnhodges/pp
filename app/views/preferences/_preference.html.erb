
<%# if preference.pizza %>

<% for combo in preference.combos %>
<tr>
	<td><%= combo.quantity  %> &times;</td>
	<td><%= combo.pizza.size %></td>
	<td><%= combo.ingredient.name %></td>
	<%#= pref.pizza.price %>
	<td class="item_price"><%= number_to_currency(preference.price) %></td>
